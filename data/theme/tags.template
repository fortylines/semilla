<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
<meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
<title><!-- tmpl_var name='blog_title' --></title>
<link rel="stylesheet" type="text/css" media="screen" href="resources/style.css" />
<link rel="alternate" title="RSS Feed" href="<!-- tmpl_var name='top' -->index.rss" type="application/rss+xml">
</head>
<body>
<div id="header">
  <img src="resources/logo.png" width="128" height="128">
</div>
<div id="title"><!-- tmpl_var name='blog_title' -->, entries tagged "<!-- tmpl_var name='tagname' escape='html' -->".
</div>

<div id="sidebar">
  <!-- tmpl_include name='topMenu.template' -->
  
  <!-- tmpl_if name='datecloud' -->
  <div class="MenuWidget">
    <h3>Archive</h3>
    <p>
      <!-- tmpl_loop name='datecloud' -->
      <!-- tmpl_var name='year' --><br />
      <!-- tmpl_loop name='months' -->
      <a href="<!-- tmpl_var name='top' -->archive/<!-- tmpl_var name='year' -->/<!-- tmpl_var name='month' -->/"><!-- tmpl_var name='month_name' --> (<!-- tmpl_var name='count' -->)</a><br />
      <!-- /tmpl_loop -->
      <!-- /tmpl_loop -->
    </p>
  </div>
  <!-- /tmpl_if name='datecloud' -->

  <!-- tmpl_if name='tagcloud' -->
  <div class="MenuWidget">  
    <h3>Tags</h3>
    <p>
    <!-- tmpl_loop name='tagcloud' -->
    <a href="<!-- tmpl_var name='top' -->tags/<!-- tmpl_var name='tag' escape='html' -->"><!-- tmpl_var name='tag' escape='html' --> (<!-- tmpl_var name='count' -->)</a><br />
    <!-- /tmpl_loop -->
    </p>
  </div>
  <!-- /tmpl_if -->
</div>

<div id="entry">
  <div>
  <table class="entry" width="100%">
    <tr>
      <td class="entry">
	<table class="entry">
	  <!-- tmpl_loop name='entries' -->
	  <tr>
	    <th class="title">
	    <a href="<!-- tmpl_var name='top' --><!-- tmpl_var name='link' escape='html' -->"><!-- tmpl_var name='title' --></a>
	    </th>
	  </tr>
	  <tr>
	    <th class="date"><!-- tmpl_var name='date' --></th>
	  </tr>
	  <tr>
	    <td class="entry">
	      <!-- tmpl_var name='body' -->
	    </td>
	  </tr>
	  <tr>
	    <th class="tags">
	    <!-- tmpl_if name='tags' -->
	    Tags: <!-- tmpl_loop name='tags' --><a href="<!-- tmpl_var name='top' -->tags/<!-- tmpl_var name='tag' escape='html' -->"><!-- tmpl_var name='tag' escape='html' --></a><!-- tmpl_if name="__last__" -->.<!-- tmpl_else -->, <!-- /tmpl_if --><!-- /tmpl_loop --> 
	    <!-- tmpl_else -->
	    No tags
	    <!-- /tmpl_if -->
	    </th>
	  </tr>
	  <!-- /tmpl_loop --> 
	</table>
      </td>
      <td class="entry" width="120px">
	<!-- tmpl_include name=adCode.template' -->
      </td>
    </tr>
  </table>
  </div>
</div>

 <p style="text-align: right;"><a href="index.rss"><img src="<!-- tmpl_var name='top' -->xml.gif" alt="RSS feed" width="36" height="14"></a></p>
<p style="text-align: right">
Created by <a href="http://steve.org.uk/Software/chronicle">Chronicle v<!-- tmpl_var name='release' --></a>
</p>
</body>
</html>
