<?xml version="1.0" ?>
<projects>
  <project name="seed">
    <description>
      CGI for presenting documents, source code and build results
    </description>
    <maintainer name="Sebastien Mirolo" email="smirolo@fortylines.com" />
    <repository>
      <pathname name="themeDir">
	<description>
	  themeDir is a directory containing templates and css for the site
	</description>
	<base>srcTop</base>
	<default>services/theme</default>
      </pathname>
      <dep name="build-essential">
	<bin>g++</bin>
      </dep>
      <dep name="git-core">
	<bin>git</bin>
      </dep>      
      <dep name="drop">
	<bin>dws</bin>
	<etc>.*/prefix.mk</etc>
	<etc>.*/suffix.mk</etc>
	<etc>.*/configure.sh</etc>
      </dep>
      <dep name="contrib/boost">
	<include>.*/(boost)/version.hpp</include>
	<lib>boost_date_time</lib>
	<lib>boost_filesystem</lib>
	<lib>boost_program_options</lib>
	<lib>boost_regex</lib>
	<lib>boost_system</lib>
      </dep>
    </repository>
  </project>
</projects>
